page {
  height: 100%;
}
.container {
  height: 100%;
  background-color: #fff;
  position: relative;
  color: #333;
  font-size: 28rpx;
}
.swiper-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 100rpx;
  height: auto;
  width: auto;
  z-index: 1;
}
.swiper {
  height: 100%;
}
.swiper .swiper-scroll {
  height: 100%;
}
.swiper .swiper-item {
  background-color: #fff;
  box-sizing: border-box;
  height: 100%;
}
.swiper .swiper-item .topic-content {
  padding: 30rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}
.swiper .swiper-item .topic-content .type-label {
  background-color: #0089ff;
  color: #fff;
  border-radius: 6rpx;
  padding: 4rpx 10rpx;
  font-size: 24rpx;
}
.swiper .swiper-item .topic-content .answer-sheet {
  margin: 40rpx -30rpx 20rpx -30rpx;
}
.swiper .swiper-item .topic-content .answer-sheet .item {
  padding: 20rpx 30rpx;
}
.swiper .swiper-item .topic-content .answer-sheet .item:active {
  background-color: #f3f3f3;
}
.swiper .swiper-item .topic-content .answer-sheet .item + .item {
  margin-top: 0;
}
.swiper .swiper-item .topic-content .answer-sheet .item .icon {
  margin-right: 20rpx;
  box-shadow: 0 0 5px #999;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  font-size: 26rpx;
}
.swiper .swiper-item .topic-content .answer-sheet .item .icon.success {
  background-color: #0089ff;
}
.swiper .swiper-item .topic-content .answer-sheet .item .icon.successs {
  background-color: #0089ff;
}
.swiper .swiper-item .topic-content .answer-sheet .item .icon.error {
  background-color: #f84d27;
}
.swiper .swiper-item .topic-content .answer-result {
  background-color: #f3f3f3;
  border-radius: 8rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
}
.swiper .swiper-item .topic-content .answer-doubt {
  font-size: 28rpx;
  color: #8a6d3b;
  background-color: #fcf8e3;
  border: #faebcc solid 1px;
  margin-top: 40rpx;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  word-break: break-all;
}
 .u-count-down__text {
  font-size: 38rpx !important;
}
.panel-bottom {
  position: absolute;
  left: 0;
  bottom: 0;
  height: auto;
  width: 100%;
  z-index: 2;
}
.panel-bottom .shade {
  position: fixed;
  z-index: 9;
  background-color: rgba(33, 33, 33, 0.5);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.panel-bottom .content {
  position: absolute;
  z-index: 10;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  background-color: #fff;
}
.panel-bottom .action-bar {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  border-top: #ddd solid 1px;
  font-size: 28rpx;
  padding: 0 20rpx;
}
.panel-bottom .action-bar .success-num {
  color: #0089ff;
}
.panel-bottom .action-bar .error-num {
  color: #f84d27;
}
.panel-bottom .topic-list {
  height: 600rpx;
}
.panel-bottom .topic-list .list-box {
  padding: 20rpx 20rpx 0 20rpx;
  font-size: 28rpx;
  color: #666;
}
.panel-bottom .topic-list .list-box .list-item {
  padding-bottom: 20rpx;
}
.panel-bottom .topic-list .list-box .list-item > view {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border: #ddd solid 1px;
  border-radius: 50%;
  margin: 0 auto;
}
.panel-bottom .topic-list .list-box .list-item > view.active {
  border: #0089ff solid 1px;
}
.panel-bottom .topic-list .list-box .list-item > view.success {
  background-color: #dbf2ff;
  color: #0089ff;
  border: none;
}
.panel-bottom .topic-list .list-box .list-item > view.success.active {
  border: #0089ff solid 1px;
}
.panel-bottom .topic-list .list-box .list-item > view.error {
  background-color: #ffeceb;
  color: #f84d27;
  border: none;
}
.panel-bottom .topic-list .list-box .list-item > view.error.active {
  border: #f84d27 solid 1px;
}

